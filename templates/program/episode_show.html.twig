{% extends 'base.html.twig' %}

{% block title %}Série {{ program.id }} - Saison {{ season.number }}, Épisode {{ episode.number }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="Poster de {{ program.title }}">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
        </div>
    </div>
    <div class="media">
        <div class="media-body">
            <h2 class="mt-0">Saison {{ season.number }}</h2>
            <p>Année : {{ season.year }}</p>
            <p>{{ season.description }}</p>
        </div>
    </div>
    <div class="media">
        <div class="media-body">
            <h3>Épisode {{ episode.number }} - {{ episode.title }}</h3>
            <p>{{ episode.synopsis }}</p>
        </div>
    </div>
    <a href="{{ path('program_season_show', {programId: program.id, seasonId: season.id}) }}">Retour</a>
{% endblock %}